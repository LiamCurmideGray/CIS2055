
@model NetPress.Models.UserAccounts;

@{
    ViewData["Title"] = "Login";
}




    <h2>Login</h2>



    <form action="/UserAccounts/login" class="form-horizontal" method="post">

        <div class="form-group">
            <label for="UserEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="UserEmail" name="UserEmail" placeholder="Email">
            </div>
        </div>

        <div class="form-group">
            <label for="UserPassword" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="Password" placeholder="Password" id="Password" />
            </div>
        </div>

        @if (ViewBag.LoginInvalid != null)
        {
            <div class="col-sm-offset-2 col-sm-10" style="color:red">Email or Password does not exist</div>
            <br/>
        }

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>

        <div>
            <div>
                <a class="col-sm-offset-2 col-sm-10" asp-action="Create">Register</a>
            </div>
        </div>


    </form>
